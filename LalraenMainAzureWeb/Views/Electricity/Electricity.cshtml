@model LalraenMainAzureWeb.Models.MeterModel

@{
    Layout = "~/Views/_LayoutPage.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Electricity payment calculation</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body>
    <h1 class="text-center"><strong>Calculate your electricity payment here</strong></h1>
    @using (Html.BeginForm("Calculate", "Electricity", FormMethod.Post))
    { 
        <div class="text-lg-center mt-lg-5">
            <label for="LastMeters">Enter last meter readings:</label>
            <input class="text-center" id="LastMeters" type="number" placeholder="1000" size="5" />
        </div>
        <div class="text-lg-center">
            <label for="CurrentMeters">Enter current meter readings:</label>
            <input class="text-center" id="CurrentMeters" type="number" placeholder="1200" size="5" />
        </div>
        <div class="text-lg-center mt-3">
            <button class="btn btn-success btn-lg">Calculate</button>
        </div>
        <div class="text-lg-center">
            <label for="Sum to pay"></label>
            <p>Sum in UAH to pay: 
            <output name="sumToPay" id="sumToPay"></output>
            </p>
        </div>
    }
</body>
</html>
