@model LalraenMainAzureWeb.Models.UserModel

@{
    ViewBag.Title = "Lalraen Home Page";
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .form-control {
            width: auto;
            margin: auto;
            text-align: center;
        }
        .label{
            width:auto;
            text-align:center;
            margin:auto;
        }
    </style>
</head>
<body>
    <div class="text-center mb-4">
        <h1>
            <strong>Lalraen Home Page Welcomes You!</strong>
        </h1>
    </div>
    <div>
        <table class="m-auto">
            <tr>
                <td class="mr-lg-5">
                    <div class="text-center m-lg-5">
                        <h1>Login Form</h1>
                    </div>
                    <div class="mt-3">
                        @Html.LabelFor(m => m.Email,
                       new { @class = "label" })
                        @Html.TextBoxFor(m => m.Email,
                       new { @class = "form-control" })
                    </div>
                    <div class="mt-3">
                        @Html.LabelFor(m => m.Password,
                       new { @class = "label" })
                        @Html.PasswordFor(m => m.Password,
                       new { @class = "form-control" })
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary btn-lg mt-lg-5" type="button">
                            @Html.ActionLink("Login", "Main")
                        </button>
                    </div>
                </td>
                <td>
                    <div class="text-center m-lg-5">
                        <h1>SignUp Form</h1>
                    </div>
                    <div class="mt-3">
                        @Html.LabelFor(m => m.Email,
                       new { @class = "label" })
                        @Html.TextBoxFor(m => m.Email,
                       new { @class = "form-control" })
                    </div>
                    <div class="mt-3">
                        @Html.LabelFor(m => m.Password,
                       new { @class = "label" })                        
                        @Html.PasswordFor(m => m.Password,
                       new { @class = "form-control" })
                    </div>
                    <div class="text-center">                        
                        <button class="btn btn-primary btn-lg mt-5" type="button">
                            @Html.ActionLink("SignUp", "Main")
                        </button>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="text-center mt-lg-5">
        <button class="btn btn-info btn-lg">
            @Html.ActionLink("Home", "Main")
        </button>
    </div>
</body>
</html>